{
  "name": "Translator",
  "version": "0.1.0",
  "manifest_version": 2,
  "permissions": ["activeTab", "storage", "declarativeContent", "<all_urls>"],
  "background": {
    "scripts": ["content.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
